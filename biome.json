{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        // varを禁止
        "noVar": "error",
        // any禁止
        "noExplicitAny": "error",
        // console.logを警告
        "noConsole": "warn"
      },
      "style": {
        // 再代入しない変数はconstを強制
        "useConst": "error",
        // !(非nullアサーション)を禁止
        "noNonNullAssertion": "error"
      },
      "correctness": {
        // 未使用の警告を禁止
        "noUnusedImports": "error",
        // 未使用変数禁止
        "noUnusedVariables": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
